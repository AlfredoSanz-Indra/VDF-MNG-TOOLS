<% include partials/_header%>   
    

<div class="container">
    <div class="row">            
        <div class="col-md-7">
            <div class="card">
                <div class="card-body">                        
                    <h5 class="card-title">Task States</h5>
                    <table class="table table-bordered table-hover">                    
                        <thead>
                            <tr>
                                <th></th>
                                <th>key</th>
                                <th>value</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(var i = 0; i < stateList.length; i++) { %>
                            <tr>
                                <td> <%= i + 1 %></td>
                                <td> <%= stateList[i].key %></td>
                                <td> <%= stateList[i].value %></td>
                            </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    
    </br>

    <div class="row">            
        <div class="col-md-7">
            <div class="card">
                <div class="card-body">                        
                    <h5 class="card-title">Add a new State</h5>

                    <form action="/VFCRM/tasks/tasksState" method="POST">
                        <div class="form-group">
                            <label for="exampleInputEmail1">State Key</label>
                            <input type="text" class="form-control" id="taskStateKey" placeholder="State Key">
                            <small id="taskStateKey" class="form-text text-muted">The key.</small>
                        </div>
                        <div class="form-group">
                            <label for="taskStateValue">State Value</label>
                            <input type="text" class="form-control" id="taskStateValue" placeholder="State value">
                            <small id="taskStateValue" class="form-text text-muted">The value.</small>
                        </div>
                        <div class="container">
                            <div class="form-row">
                                <div class="col-md-2 offset-md-10">
                                    <button type="submit" class="btn btn-primary btn-block">Send</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


</div>

<% include partials/_footer%>  